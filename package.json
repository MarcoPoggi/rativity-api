{
  "name": "rativity-api",
  "version": "0.0.0",
  "description": "API REST for rativity app",
  "main": "src/index.js",
  "scripts": {
    "start": "NODE_ENV=production node src/index.js",
    "dev": "NODE_ENV=development nodemon src/index.js",
    "test": "node tasks/create_test_database.js && NODE_ENV=test mocha \"test/**/*.test.js\" --recursive --timeout 60000 --exit",
    "db:create": "npx sequelize-cli db:create",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:drop": "npx sequelize-cli db:drop",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate"
  },
  "author": "rativity",
  "license": "MIT",
  "devDependencies": {
    "mocha": "10.2.0",
    "nodemon": "2.0.20",
    "sequelize-cli": "6.5.2",
    "supertest": "6.3.3"
  },
  "dependencies": {
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "pg": "8.8.0",
    "pg-hstore": "2.3.4",
    "sequelize": "6.28.0"
  }
}